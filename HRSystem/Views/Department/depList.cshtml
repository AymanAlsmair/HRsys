@model HRSystem.Models.VMdept
@{
    ViewBag.Title = "depList";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

@section Section1{

    @{
        var grid = new WebGrid(Model.lisDept);
    }

<form action="search" method="post">
        <div class="row">

        </div>
        <div class="row">
            <div class="col-lg-2 col-xs-2">
                @Html.LabelFor(a => a.Dept.name)
            </div>
            <div class="col-lg-4 col-xs-10">
                @Html.TextBoxFor(a => a.Dept.name)
            </div>
            <div class="col-lg-4 col-xs-12">
                <input type="submit" value="Search" />
            </div>
        </div>

        <div class="row">

            @grid.GetHtml(columns: grid.Columns(grid.Column("Name","Name"),
                                                grid.Column("Description", "Description"),
                                                grid.Column(format: @<text> <a href="#">Edit</a>  | <a href="#">Delete</a> </text>)
                                                         )
                                   )


        </div>

   
</form>
}

